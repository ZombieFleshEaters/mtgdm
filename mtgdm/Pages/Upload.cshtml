@page
@model mtgdm.Pages.UploadModel
@{
    ViewData["Title"] = "Upload";
}

<section class="section">
    <h1 class="title has-text-centered">File upload</h1>
    <form method="post" enctype="multipart/form-data">
        <div class="columns">
            <div class="column is-4 is-offset-4 box">
                <div class="field">
                    <div class="file has-name">
                        <label class="file-label">
                            <input class="file-input" asp-for="FileUpload" type="file">
                            <span class="file-cta">
                                <span class="file-icon">
                                    <i class="fas fa-upload"></i>
                                </span>
                                <span class="file-label">
                                    Choose a file…
                                </span>
                            </span>
                            <span class="file-name">
                                Screen Shot 2017-07-29 at 15.54.25.png
                            </span>
                        </label>
                    </div>
                </div>
                <div class="buttons">
                    <button type="submit" class="button is-success">Login</button>
                    <button asp-page-handler="delete" type="submit" class="button is-danger">Delete</button>
                </div>
            </div>            
        </div>
    </form>
</section>
