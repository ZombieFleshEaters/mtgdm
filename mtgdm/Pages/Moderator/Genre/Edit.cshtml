@page "/moderator/genres/edit/{GenreID}"
@model mtgdm.Pages.Moderator.Genre.EditModel
@{
    ViewData["Title"] = "Edit genre";
    ViewData["ReturnURL"] = Url.Page("/Moderator/Genre/Edit", new { @Model.Genre.GenreID });
}

<nav class="breadcrumb is-medium" aria-label="breadcrumbs">
    <ul>
        <li><a asp-page="/Moderator/Index">Moderator</a></li>
        <li><a asp-page="/Moderator/Genre/List">Genres</a></li>
        <li class="is-active"><a href="/">@Model.Genre.Name</a></li>
    </ul>
</nav>

<form class="form-is-clean" method="post">
    <div class="column is-8 box">

        <div asp-validation-summary="ModelOnly" class="field notification is-danger is-light"></div>
        <div class="field">
            <div class="control has-icons-left has-icons-right">
                <input class="input" asp-for="@Model.Genre.Name" placeholder="Title" autocomplete="off" autofocus>
                <span class="icon is-large is-left">
                    <i class="fas fa-tag fa-lg" title="Genre"></i>
                </span>
            </div>
            @Html.ValidationMessage("Validation.Key.Duplicate", "", new { @class = "help is-danger" }, "")
            <span class="help is-danger" asp-validation-for="@Model.Genre.Name"></span>
        </div>

        @Html.HiddenFor(h => h.Genre.GenreID)
        @Html.HiddenFor(h => h.Genre.Normalized)
        <div class="buttons">
            <button type="submit" class="button is-primary">
                <span class="icon"><i class="fas fa-save fa-lg"></i></span><span>Save</span>
            </button>
            <a asp-page="/Moderator/Genre/List" class="button is-danger is-light">
                <span class="icon"><i class="fas fa-times fa-lg"></i></span><span>Cancel</span>
            </a>
        </div>
    </div>
</form>
