@page "/moderator/genres/delete/{GenreID}"
@model mtgdm.Pages.Moderator.Genre.DeleteModel
@{
    ViewData["Title"] = "Delete genre";
    ViewData["ReturnURL"] = Url.Page("/Moderator/Genre/Delete", new { @Model.Genre.GenreID });
}

<nav class="breadcrumb is-medium" aria-label="breadcrumbs">
    <ul>
        <li><a asp-page="/Moderator/Index">Moderator</a></li>
        <li><a asp-page="/Moderator/Genre/List">Genres</a></li>
        <li class="is-active"><a href="/">@Model.Genre.Name</a></li>
    </ul>
</nav>

<form class="form-is-clean" method="post">
    <div class="column is-8 box">
        <div class="field notification is-warning is-light">
            <span class="icon is-left">
                <i class="fas fa-exclamation-triangle" title="Warning"></i>
            </span>
            <span><strong>Are you sure you want to delete this Genre?</strong></span>
        </div>
        <div asp-validation-summary="ModelOnly" class="field notification is-danger is-light"></div>
        <div class="field">
            <div class="control has-icons-left has-icons-right">
                <input class="input" asp-for="@Model.Genre.Name" placeholder="Title" autocomplete="off" disabled="disabled">
                <span class="icon is-large is-left">
                    <i class="fas fa-tag fa-lg" title="Genre"></i>
                </span>
            </div>
            <span class="help is-danger" asp-validation-for="@Model.Genre.Name"></span>
        </div>
        @Html.HiddenFor(h => h.Genre.Name)
        @Html.HiddenFor(h => h.Genre.GenreID)
        @Html.HiddenFor(h => h.Genre.Normalized)
        <div class="buttons">
            <button type="submit" class="button is-danger">
                <span class="icon"><i class="fas fa-trash-alt fa-lg" title="Delete"></i></span><span>Delete</span>
            </button>
            <a asp-page="/Moderator/Genre/List" class="button is-danger is-light">
                <span class="icon"><i class="fas fa-times fa-lg" title="Cancel"></i></span><span>Cancel</span>
            </a>
        </div>
    </div>
</form>