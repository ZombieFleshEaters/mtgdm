@page "/admin/system-values/delete/{SystemValueKey}"
@model mtgdm.Pages.Admin.SystemValues.DeleteModel
@{
    ViewData["Title"] = $"Delete system value";
    ViewData["ReturnURL"] = Url.Page("/Admin/SystemValues/Delete", new { SystemValueKey = @Model.SystemValue.Key });
}

<nav class="breadcrumb is-medium" aria-label="breadcrumbs">
    <ul>
        <li><a asp-page="/Admin/Index">Admin</a></li>
        <li><a asp-page="/Admin/SystemValues/List">System Values</a></li>
        <li class="is-active"><a href="/">@Model.SystemValue.Key</a></li>
    </ul>
</nav>

<form class="form-is-clean" method="post">
    <div class="column is-8 box">

        <div class="field notification is-warning is-light">
            <span class="icon is-left">
                <i class="fas fa-exclamation-triangle" title="Warning"></i>
            </span>
            <span><strong>Are you sure you want to delete this system value?</strong></span>
        </div>

        <div asp-validation-summary="ModelOnly" class="field notification is-danger is-light"></div>
        <div class="field">
            <div class="control has-icons-left has-icons-right">
                <input class="input" asp-for="SystemValue.Key" placeholder="Title" autocomplete="off" disabled>
                <span class="icon is-large is-left">
                    <i class="fas fa-key fa-lg" title="Key"></i>
                </span>
            </div>
            <span class="help is-danger" asp-validation-for="SystemValue.Key"></span>
        </div>

        <div class="field">
            <div class="control has-icons-left has-icons-right">
                <input class="input" asp-for="SystemValue.Value" placeholder="Title" autocomplete="off" disabled>
                <span class="icon is-large is-left">
                    <i class="fas fa-edit fa-lg" title="Film title"></i>
                </span>
            </div>
            <span class="help is-danger" asp-validation-for="SystemValue.Value"></span>
        </div>

        @Html.HiddenFor(h => h.SystemValue.Key)
        <div class="buttons">
            <button type="submit" class="button is-danger">
                <span class="icon"><i class="fas fa-trash-alt fa-lg"></i></span><span>Yes, please delete</span>
            </button>
            <a asp-page="/Admin/SystemValues/List" class="button is-danger is-light">
                <span class="icon"><i class="fas fa-times fa-lg"></i></span><span>Cancel</span>
            </a>
        </div>

    </div>
</form>