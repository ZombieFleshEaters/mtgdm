@page "/admin/users/delete/{UserID}"
@model mtgdm.Pages.Admin.User.DeleteModel
@{
    ViewData["Title"] = "User delete";
    ViewData["ReturnURL"] = Url.Page("/Admin/User/Delete", new { @Model.UserID });
}

<div class="columns is-vertical">
    <div class="column">
        <nav class="breadcrumb is-medium" aria-label="breadcrumbs">
            <ul>
                <li><a asp-page="/Admin/User/List">Users</a></li>
                <li class="is-active"><a asp-page="/Admin/User/Delete" asp-route-UserID="@Model.UserID">Edit</a></li>
            </ul>
        </nav>
    </div>
</div>

<form class="form-is-clean" method="post">
    <div class="column is-8 box">

        <div class="field notification is-warning is-light">
            <span class="icon is-left">
                <i class="fas fa-exclamation-triangle" title="Warning"></i>
            </span>
            <span><strong>Are you sure you want to delete this user?</strong></span>
        </div>

        <div asp-validation-summary="ModelOnly" class="field notification is-danger is-light"></div>
        <div class="field">
            <div class="control has-icons-left has-icons-right">
                <input class="input" asp-for="@Model.UserDelete.UserName" placeholder="Title" autocomplete="off" disabled>
                <span class="icon is-large is-left">
                    <i class="fas fa-key fa-lg" title="User ID"></i>
                </span>
            </div>
            <span class="help is-danger" asp-validation-for="@Model.UserDelete.UserName"></span>
        </div>

        <div class="field">
            <div class="control has-icons-left has-icons-right">
                <input class="input" asp-for="@Model.UserDelete.Email" placeholder="Title" autocomplete="off" disabled>
                <span class="icon is-large is-left">
                    <i class="fas fa-envelope fa-lg" title="Email"></i>
                </span>
            </div>
            <span class="help is-danger" asp-validation-for="@Model.UserDelete.Email"></span>
        </div>

        <div class="buttons">
            <button type="submit" class="button is-danger">
                <span class="icon"><i class="fas fa-trash-alt" title="Delete user"></i></span><span>Delete user</span>
            </button>
            <a asp-page="/Admin/User/List" class="button is-danger is-light">
                <span class="icon"><i class="fas fa-times fa-lg"></i></span><span>Cancel</span>
            </a>
        </div>
    </div>
    @Html.HiddenFor(h => h.UserDelete.Id)
</form>