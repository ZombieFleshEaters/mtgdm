@page
@model SetPasswordModel
@{
    ViewData["Title"] = "Set password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}
<form id="profile-form" method="post">
    <div class="column is-8">
        <div class="title is-5">@ViewData["Title"]</div>
        <div asp-validation-summary="ModelOnly" class="field notification is-danger is-light"></div>
        @if (!string.IsNullOrEmpty(Model.StatusMessage))
        {
            <div class="field notification is-success is-light">
                <span class="icon is-left">
                    <i class="fas fa-check" title="Success"></i>
                </span>
                <span>@Model.StatusMessage</span>
            </div>
        }
        <div class="content">
            <div class="field">
                <div class="control has-icons-left">
                    <input class="input" asp-for="Input.NewPassword" type="password" placeholder="New password" autocomplete="off">
                    <span class="icon is-small is-left">
                        <i class="fas fa-key"></i>
                    </span>
                </div>
                <span class="help is-danger" asp-validation-for="Input.NewPassword"></span>
            </div>
            <div class="field">
                <div class="control has-icons-left">
                    <input class="input" asp-for="Input.ConfirmPassword" type="password" placeholder="Confirm new password" autocomplete="off">
                    <span class="icon is-small is-left">
                        <i class="fas fa-key"></i>
                    </span>
                </div>
                <span class="help is-danger" asp-validation-for="Input.ConfirmPassword"></span>
            </div>
            <div class="buttons">
                <button class="button is-primary" type="submit">
                    <span class="icon is-large is-left">
                        <i class="fas fa-save fa-lg"></i>
                    </span>
                    <span>Set password</span>
                </button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}