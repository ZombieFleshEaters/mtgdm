@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete personal data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}


    <form id="delete-user" method="post" class="form-group">
        <div class="column is-8">
            <div class="title is-5">@ViewData["Title"]</div>
            <div class="field notification is-warning is-light">
                <span class="icon is-left">
                    <i class="fas fa-exclamation-triangle" title="Warning"></i>
                </span>
                <span><strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="field notification is-danger is-light"></div>
            <div class="content">
                @if (Model.RequirePassword)
                {
                    <div class="field">
                        <div class="control has-icons-left">
                            <input class="input" asp-for="Input.Password" placeholder="Password" autocomplete="off">
                            <span class="icon is-small is-left">
                                <i class="fas fa-key"></i>
                            </span>
                        </div>
                        <span class="help is-danger" asp-validation-for="Input.Password"></span>
                    </div>
                }
                <div class="buttons">
                    <button class="button is-danger" type="submit">
                        <span class="icon is-left">
                            <i class="fas fa-trash-alt" title="Remove"></i>
                        </span>
                        <span>Delete data and close my account</span>
                    </button>
                </div>
            </div>
        </div>
    </form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}