@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Reset your password";
}

<form method="post">
    <h1 class="title has-text-centered">@ViewData["Title"]</h1>
    <div class="columns is-centered">
        <div class="column is-6 box">
            <div class="field">
                <div class="control has-icons-left has-icons-right">
                    <input class="input" asp-for="Input.Email" placeholder="Email" autocomplete="off">
                    <span class="icon is-small is-left">
                        <i class="fas fa-envelope" title="Email"></i>
                    </span>
                </div>
                <span class="help is-danger" asp-validation-for="Input.Email"></span>
            </div>
            <div class="buttons">
                <button class="button is-primary" type="submit">
                    <span class="icon"><i class="far fa-paper-plane"></i></span><span>Send confirmation email</span>
                </button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

