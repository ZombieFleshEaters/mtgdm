@using mtgdm.Views.Shared
@*@model EmailButtonViewModel*@


@if (ViewData.ContainsKey("EmailButtonText") && !string.IsNullOrEmpty(ViewData["EmailButtonText"].ToString()))
{
    <tr>
        <td style="padding: 0 20px;">
            <!-- Button : BEGIN -->
            <table align="center" role="presentation" cellspacing="0" cellpadding="0" border="0" style="margin: auto;">
                <tr>
                    <td class="button-td button-td-primary" style="border-radius: 4px; background: #222222;">
                        <a class="button-a button-a-primary" href="@ViewData["EmailButtonURL"]" style="background: #222222; border: 1px solid #000000; font-family: sans-serif; font-size: 15px; line-height: 15px; text-decoration: none; padding: 13px 17px; color: #ffffff; display: block; border-radius: 4px;">@ViewData["EmailButtonText"]</a>
                    </td>
                </tr>
            </table>
            <!-- Button : END -->
        </td>
    </tr>
}
